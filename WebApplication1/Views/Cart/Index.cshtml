@{
    Layout = null;
}

@using WebApplication1.Models;
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }

        h3 {
            margin: 20px 0;
            text-align: center;
        }

        table {
            width: 80%;
            margin: 0 auto;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        img {
            max-width: 60px;
            height: auto;
        }

        a {
            display: inline-block;
            padding: 5px 10px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

            a:hover {
                background-color: #0056b3;
            }

        .empty-cart {
            text-align: center;
            margin: 20px;
            color: #777;
        }

        .cart-total {
            text-align: right;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h3>Cart Page</h3>
    @if (HttpContextAccessor.HttpContext.Session.Keys.Contains("cart"))
    {
        <table>
            <tr>
                <th>Option</th>
                <th>Id</th>
                <th>Name</th>
                <th>ImageFileName</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Sub Total</th>
            </tr>
            @foreach (ProductItems item in HttpContextAccessor.HttpContext.Session.Get<List<ProductItems>>("cart"))
            {
                <tr>
                    <td><a href="@Url.Action("Remove", "Cart", new { id = item.Product.Id })">Remove</a></td>
                    <td>@item.Product.Id</td>
                    <td>@item.Product.Name</td>
                    <td><img src="~/Images2/@item.Product.ImageFileName" width="60" /></td>
                    <td>₹@item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>₹@(item.Product.Price * item.Quantity)</td>
                </tr>
            }
            <tr>
                <td colspan="6" class="cart-total">Total:</td>
                <td class="cart-total">
                    @{
                        var cartItems = HttpContextAccessor.HttpContext.Session.Get<List<ProductItems>>("cart");
                        var total = cartItems.Sum(item => item.Product.Price * item.Quantity);
                    }
                    ₹@total
                </td>
            </tr>
        </table>
    }
    else
    {
        <div class="empty-cart">
            Your cart is empty.
        </div>
    }

    <div style="text-align: center; margin-top: 20px;">
        <a href="@Url.Action("Index", "Product")">Continue Shopping</a>
    </div>


</body>
</html>
