@model WebApplication1.Models.Product

<h2>Add Product</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="mt-4">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Product Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label">Price</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input asp-for="Price" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ImageFileName" class="control-label">Image</label>
        <div class="custom-file">
            <input asp-for="ImageFile" type="file" class="custom-file-input" id="customFile" accept=".jpg,.jpeg,.png" />
            <label class="custom-file-label" for="customFile">Choose file...</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Add Product</button>
</form>
